.nib-icon
  height 24px
  width 24px
  fill: none
  color: $t.text3
  stroke: currentColor
  stroke-width 2
  stroke-linecap round
  stroke-linejoin round

.nib
  &-icon-btn
    border-radius 50%
    height 32px
    width 32px
    box-sizing border-box
    cursor pointer
    flex-center()

    &.outline
      border 1px solid $t.grey

    &.round
      border-radius 2px

    &.small
      height 20px
      width 20px
      svg.nib-icon
        height 20px
        width 20px

    &:hover
      background $t.grey

  &-card
    border-radius 4px
    background: $t.bg
    box-shadow: rgba(0, 0, 0, 0.12) 0px 0px 20px 2px;
